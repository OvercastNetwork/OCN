%section
    .btn-group.pull-right
        %a.btn.btn-primary{:href => new_admin_family_path} New Family
    .row
        .col-md-12
            .table-container
                %table.table.table-striped.table-condensed
                    %thead
                        %tr
                            %th ID
                            %th Name
                            %th Pri
                            %th Public
                    %tbody
                        - @families.each do |family|
                            %tr
                                %td= family.id
                                %td= family.name
                                %td= family.priority
                                %td= family.public
                                %td
                                    %a{:href => edit_admin_family_path(family.id)}
                                        %i.fa.fa-pencil
                                %td
                                    %a{:href => admin_family_path(family.id), :data => {:method => :delete, :confirm => "Are you sure you want to delete #{family.name}?"}}
                                        %i.fa.fa-times
